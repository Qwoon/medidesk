@model Web.Models.Appointments.AppointmentDetailDTO
@{
    ViewData["Title"] = "Detalles de cita";
}

<h4 class="mb-4 text-body-emphasis text-center">
    <i class="fa-solid fa-circle-info me-1"></i> Detalles de cita
</h4>

<div class="container">
    <div class="row">
        <dl class="row">
            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.AppointmentId)</dt>
                <dd><span class="badge bg-body-tertiary text-body-emphasis border">@Model.AppointmentId</span></dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.SpecialtyName)</dt>
                <dd class="text-body">@Model.SpecialtyName</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.DoctorName)</dt>
                <dd class="text-body">@Model.DoctorName</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.PatientName)</dt>
                <dd class="text-body">@Model.PatientName</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.ConsultationType)</dt>
                <dd class="text-body">@Model.ConsultationType</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Date)</dt>
                <dd class="text-body">@Model.Date</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Time)</dt>
                <dd class="text-body">@Model.Time</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Status)</dt>
                <dd><span class="badge bg-body-tertiary text-body-emphasis border">@Model.Status</span></dd>
            </div>

            <div class="col-md-12 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Symptoms)</dt>
                <dd class="text-body">@Model.Symptoms</dd>
            </div>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-end gap-2 mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-left-long me-1"></i> Volver
    </a>
    <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-primary">
        <i class="fa-solid fa-pen me-1"></i> Editar estado
    </a>
</div>