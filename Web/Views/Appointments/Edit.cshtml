@model Web.Models.Appointments.AppointmentDetailDTO
@{
    ViewData["Title"] = "Editar estado de cita";
}

<h4 class="text-center mb-3 text-body-emphasis">
    <i class="fa-solid fa-pen me-1"></i> Editar estado de cita
</h4>

@{
    var editUrl = Url.Action("Edit", "Appointments", new { id = Model.AppointmentId });
}
<form action="@editUrl" method="post" novalidate data-val="false">
    @Html.AntiForgeryToken()

    <input asp-for="AppointmentId" type="hidden" />
    <input type="hidden" name="id" value="@Model.AppointmentId" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row mb-2">
        <div class="col-md-6 mb-2">
            <label class="form-label">Código</label>
            <input type="text" class="form-control" value="@Model.AppointmentId" disabled />
        </div>
        <div class="col-md-6 mb-2">
            <label asp-for="Status" class="form-label"></label><span class="text-danger">*</span>
            <select asp-for="Status" class="form-select" asp-items="ViewBag.StatusList"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-6 mb-2">
            <label asp-for="DoctorName" class="form-label"></label>
            <input asp-for="DoctorName" class="form-control" disabled />
        </div>
        <div class="col-md-6 mb-2">
            <label asp-for="PatientName" class="form-label"></label>
            <input asp-for="PatientName" class="form-control" disabled />
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-6 mb-2">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" class="form-control" disabled />
        </div>
        <div class="col-md-6 mb-2">
            <label asp-for="Time" class="form-label"></label>
            <input asp-for="Time" class="form-control" disabled />
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-left-long me-1"></i> Volver
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk me-1"></i> Guardar
        </button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}