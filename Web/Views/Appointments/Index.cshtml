@model IEnumerable<Web.Models.Appointments.AppointmentListDTO>
@{
    ViewData["Title"] = "Citas";
}

<h4 class="text-center mb-3 text-body-emphasis">
    <i class="fa-solid fa-calendar-check me-1"></i> Citas
</h4>

<div id="buttonGroupHeader" class="d-flex justify-content-between align-items-center mb-3">
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">
        <i class="fa-solid fa-circle-plus me-1"></i> Crear
    </button>
</div>

<div id="spinnerLoad" class="d-flex justify-content-center align-items-center my-5">
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Cargando...</span>
    </div>
</div>

<section id="tableContainer" class="d-none">
    <table id="appointmentTable" class="table mb-0">
        <thead>
            <tr>
                <th class="text-start">@Html.DisplayNameFor(m => m.First().AppointmentId)</th>
                <th>@Html.DisplayNameFor(m => m.First().SpecialtyName)</th>
                <th>@Html.DisplayNameFor(m => m.First().DoctorName)</th>
                <th>@Html.DisplayNameFor(m => m.First().PatientName)</th>
                <th class="text-center">@Html.DisplayNameFor(m => m.First().ConsultationType)</th>
                <th class="text-center">@Html.DisplayNameFor(m => m.First().Date)</th>
                <th class="text-center">@Html.DisplayNameFor(m => m.First().Time)</th>
                <th class="text-center">@Html.DisplayNameFor(m => m.First().Status)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td class="text-start">
                        <span class="badge bg-body-tertiary text-body-emphasis border">@a.AppointmentId</span>
                    </td>
                    <td>@a.SpecialtyName</td>
                    <td>@a.DoctorName</td>
                    <td>@a.PatientName</td>
                    <td class="text-center">
                        <span class="badge bg-body-tertiary text-body-emphasis border">@a.ConsultationType</span>
                    </td>
                    <td class="text-center">@a.Date</td>
                    <td class="text-center">@a.Time</td>
                    <td class="text-center">
                        <span class="badge rounded-pill border">
                            @a.Status
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@a.AppointmentId" class="btn btn-secondary btn-sm" title="Detalles">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@a.AppointmentId" class="btn btn-secondary btn-sm me-1" title="Editar estado">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            initCustomDataTable('#appointmentTable');
        });
    </script>
}