@model sistema_citas_medicas.Models.Cita

@{
    ViewBag.Title = "ReservarCita";
}

<h2>ReservarCita</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Cita</h4>
        <hr />
