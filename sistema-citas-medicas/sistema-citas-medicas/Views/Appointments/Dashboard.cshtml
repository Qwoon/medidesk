@model IEnumerable<sistema_citas_medicas.Models.Appointment>

<!-- FullCalendar CSS -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.css" rel="stylesheet" />

<!-- FullCalendar JS -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.js"></script>

<!-- ESTILOS PARA FORZAR MAYÚSCULAS -->
<style>
    .fc-toolbar-title,
    .fc-button,
    .fc-col-header-cell-cushion {
        text-transform: uppercase !important;
    }
</style>

<div id="calendar"></div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'es',
                firstDay: 1,
                height: '1200px',
                dayMaxEventRows: true,
                dayMaxEvents: 3,
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,dayGridWeek,dayGridDay'
                },
                events: [
                    @foreach (var appointment in Model)
                    {
                        <text>
                        {
                            title: 'Cita @appointment.Time.ToString("hh\\:mm")',
                            start: '@appointment.Date.ToString("yyyy-MM-dd")',
                            color: '@(appointment.Status == "confirmada" ? "#3B82F6" : appointment.Status == "cancelada" ? "#EF4444" : appointment.Status == "pendiente" ? "#F59E0B" : "#10B981")'
                        },
                        </text>
                    }
                ]
            });

            calendar.render();
        });
    </script>
}