@model sistema_citas_medicas.Models.Especialidad

@{
    ViewBag.Title = "Detalle especialidad";
}

<h4 class="mb-4 text-body-emphasis text-center">
    <i class="fa-solid fa-circle-info me-1"></i>
    Detalle especialidad
</h4>

<div class="container">
    <div class="row">
        <dl class="row">
            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.IdEspecialidad)</dt>
                <dd class="text-body">@Html.DisplayFor(m => m.IdEspecialidad)</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Nombre)</dt>
                <dd class="text-body">@Html.DisplayFor(m => m.Nombre)</dd>
            </div>

            <div class="col-12 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Descripcion)</dt>
                <dd class="text-body">@Html.DisplayFor(m => m.Descripcion)</dd>
            </div>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-end gap-2 mt-4">
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fa-solid fa-left-long me-1"></i>
        Volver
    </a>
    <a href="@Url.Action("Editar", new { id = Model.IdEspecialidad })" class="btn btn-primary">
        <i class="fa-solid fa-pen me-1"></i>
        Editar
    </a>
</div>