@model sistema_citas_medicas.Models.Usuario

@{
    ViewBag.Title = "Eliminar usuario";
}

<h4 class="mb-4 text-center text-body-emphasis">
    <i class="fa-solid fa-circle-exclamation me-1 text-danger"></i>
    ¿Estás seguro de que deseas eliminar este usuario?
</h4>

<div class="container">
    <div class="row">
        <dl class="row">
            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.IdUsuario)</dt>
                <dd class="text-body">@Html.DisplayFor(m => m.IdUsuario)</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Nombre)</dt>
                <dd class="text-body">@Html.DisplayFor(m => m.Nombre)</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Apellido)</dt>
                <dd class="text-body">@Html.DisplayFor(m => m.Apellido)</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Correo)</dt>
                <dd class="text-body">@Html.DisplayFor(m => m.Correo)</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Telefono)</dt>
                <dd class="text-body">@Html.DisplayFor(m => m.Telefono)</dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.Rol)</dt>
                <dd class="text-body">
                    @{
                        var rol = Model.Rol?.ToLower();
                        var icon = "fa-user";
                        var text = "Desconocido";

                        switch (rol)
                        {
                            case "pacientes":
                                icon = "fa-bed-pulse";
                                text = "Paciente";
                                break;
                            case "medicos":
                                icon = "fa-user-doctor";
                                text = "Médico";
                                break;
                            case "administrador":
                                icon = "fa-user-shield";
                                text = "Administrador";
                                break;
                        }
                    }
                    <span class="badge bg-body-tertiary text-body-emphasis border">
                        <i class="fa-solid @icon me-1"></i>@text
                    </span>
                </dd>
            </div>

            <div class="col-md-6 mb-3">
                <dt class="text-body-emphasis">@Html.DisplayNameFor(m => m.FotoPerfil)</dt>
                <dd class="text-body">@Html.DisplayFor(m => m.FotoPerfil)</dd>
            </div>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex justify-content-end gap-2 mt-4 container">
        <a href="@Url.Action("Index")" class="btn">
            <i class="fa-solid fa-left-long me-1"></i>
            Cancelar
        </a>

        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash me-1"></i>
            Eliminar
        </button>
    </div>
}