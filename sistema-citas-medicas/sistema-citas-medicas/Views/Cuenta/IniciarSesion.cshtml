@model sistema_citas_medicas.Models.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es" data-bs-theme="auto">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Sistema de citas médicas con vistas para administrador, médico y paciente, que facilita la gestión, programación y seguimiento de consultas médicas.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar sesión - Hospital</title>
    <link href="/Content/Icons/logo-dark.svg" rel="icon" media="(prefers-color-scheme: light)">
    <link href="/Content/Icons/logo-light.svg" rel="icon" media="(prefers-color-scheme: dark)">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-body-tertiary">
    <section class="m-0 p-0">
        <div class="container-fluid m-0 p-0">
            <div class="row g-0 min-vh-100">
                <!-- Lado izquierdo: imagen completa -->
                <div class="col-12 col-md-6 d-none d-md-block">
                    <img src="~/Content/Img/login-foto.jpg" alt="Imagen de inicio" class="img-fluid w-100 h-100 object-fit-cover" />
                </div>

                <!-- Lado derecho: formulario -->
                <div class="col-12 col-md-6 d-flex align-items-center justify-content-center bsb-tpl-bg-lotion">
                    <div class="p-4 w-100" style="max-width: 500px;">
                        <div class="text-center mb-4 text-body-emphasis">
                            <i class="fa-solid fa-hospital me-2 fa-2xl"></i>
                        </div>

                        <h3 class="mb-4 text-center text-body-emphasis">Iniciar sesión</h3>

                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fa-solid fa-circle-check me-1"></i>
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fa-solid fa-circle-xmark me-1"></i>
                                @ViewBag.Mensaje
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @using (Html.BeginForm("IniciarSesion", "Cuenta", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Correo electrónico" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control password-field", @placeholder = "Contraseña", data_toggle_id = "1" })
                                    <span class="input-group-text" style="cursor: pointer;" data-toggle-id="1">
                                        <i class="fa-solid fa-eye icon"></i>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check m-0">
                                    <input class="form-check-input" type="checkbox" id="remember_me">
                                    <label class="form-check-label small" for="remember_me">Recordarme</label>
                                </div>
                                <div>
                                    <a href="#!" class="small text-body text-decoration-none">¿Olvidaste tu contraseña?</a>
                                </div>
                            </div>

                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary w-100">Iniciar sesión</button>
                            </div>
                        }

                        <div class="text-center">
                            <p class="small m-0 text-body-secondary">¿No tienes una cuenta? <a href="@Url.Action("Registrar", "Cuenta")" class="link-primary text-decoration-none">Crea una aquí</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="dropdown position-fixed bottom-0 end-0 mb-3 me-3">
        @Html.Partial("_ToggleTheme")
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/password.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
</body>
</html>