@model sistema_citas_medicas.Models.Medico

@{
  ViewBag.Title = "Editar";
}

<h2>Actualizar Datos</h2>

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

<div class="form-horizontal">
  <hr />
  <h4>Médico @Model.Nombre @Model.Apellido</h4>


  @Html.HiddenFor(model => model.IdUsuario)
  <div class="form-group">
    @Html.LabelFor(model => model.IdEspecialidad, "Especialidad", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
      @Html.DropDownListFor(model => model.IdEspecialidad,
          ViewBag.especialidades as SelectList,
          "Seleccione una especialidad",
          new { @class = "form-control" })
      @Html.ValidationMessageFor(model => model.IdEspecialidad, "", new { @class = "text-danger" })
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Grabar cambios" class="btn btn-default" />
    </div>
  </div>
</div>
}

<div>
  @Html.ActionLink("Lista Médicos", "Index")
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}