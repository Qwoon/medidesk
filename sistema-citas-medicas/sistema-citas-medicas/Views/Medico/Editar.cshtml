@model sistema_citas_medicas.Models.Medico

@{
    ViewBag.Title = "Editar médico";
}

<h4 class="text-center mb-3 text-body-emphasis">
    <i class="fa-solid fa-pen me-1"></i>
    Editar médico
</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdUsuario)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <p class="text-danger mb-3">
        * Obligatorio
    </p>

    <div class="row mb-3">
        <div class="col-md-6 mb-2">
            @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingrese nombre", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.Apellido, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", placeholder = "Ingrese apellido", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6 mb-2">
            @Html.LabelFor(model => model.Correo, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Correo, new { @class = "form-control", placeholder = "correo@ejemplo.com", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.EspecialidadNombre, new { @class = "form-label" })
            <span class="text-danger">*</span>
            @Html.DropDownListFor(model => model.IdEspecialidad, ViewBag.especialidades as SelectList, "Seleccione una especialidad", new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.IdEspecialidad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            @Html.LabelFor(model => model.Estado, new { @class = "form-label" })
            <span class="text-danger">*</span>
            @Html.DropDownListFor(model => model.Estado,
                new SelectList(new[] {
                    new { Value = true, Text = "Activo" },
                    new { Value = false, Text = "Inactivo" }
                }, "Value", "Text", Model.Estado),
                new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-3">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fa-solid fa-left-long me-1"></i>
            Volver
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk me-1"></i>
            Guardar
        </button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}